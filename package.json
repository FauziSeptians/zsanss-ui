{
  "name": "zsanss-ui",
  "version": "1.1.3",
  "description": "Modern, accessible, and fully customizable React UI component library built with Tailwind CSS. Production-ready components with TypeScript support.",
  "author": {
    "name": "Fauzi Septians",
    "url": "https://github.com/FauziSeptians"
  },
  "license": "MIT",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "./dist/zsanss-ui.umd.cjs",
  "module": "./dist/zsanss-ui.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/zsanss-ui.js",
      "require": "./dist/zsanss-ui.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "auto-changelog": "npx auto-changelog --template templates/changelog-template.hbs"
  },
   "auto-changelog": {
      "template": "changelog-template.hbs",
      "unreleased": true,
      "commitLimit": false
    },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.14",
    "lucide-react": "^0.544.0",
    "marked": "^5.1.2",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "tailwindcss": ">=4.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/js": "^9.36.0",
    "@storybook/addon-a11y": "^9.1.10",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-vitest": "^9.1.10",
    "@storybook/react-vite": "^9.1.10",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "eslint-plugin-storybook": "^9.1.10",
    "globals": "^16.4.0",
    "playwright": "^1.56.0",
    "storybook": "^9.1.10",
    "storybook-addon-changelog-viewer": "^0.0.12",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwindcss": ">=4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FauziSeptians/zsanss-ui.git"
  },
  "homepage": "https://zsanss-ui.vercel.app/",
  "bugs": {
    "url": "https://github.com/FauziSeptians/zsanss-ui/issues"
  },
  "keywords": [
    "react",
    "react-components",
    "react-ui",
    "tailwindcss",
    "tailwind-components",
    "tailwind-ui",
    "ui-library",
    "ui-components",
    "component-library",
    "design-system",
    "typescript",
    "vite",
    "button",
    "form",
    "input",
    "modal",
    "accessible",
    "a11y",
    "customizable",
    "modern-ui",
    "frontend",
    "web-components",
    "zsanss-ui",
    "zsanss"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}